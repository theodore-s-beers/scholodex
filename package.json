{
  "name": "scholodex",
  "version": "0.1.0",
  "description": "A prototype for a scholar's rolodex",
  "repository": "github:theodore-s-beers/scholodex",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prettify": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "standardize": "ts-standard --fix",
    "start": "sirv public",
    "validate": "svelte-check"
  },
  "dependencies": {
    "sirv-cli": "^1.0.14",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "prettier": "^2.5.1",
    "rollup": "^2.61.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.44.2",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "ts-standard": "^11.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3"
  },
  "ts-standard": {
    "ignore": [
      "*.d.ts"
    ]
  }
