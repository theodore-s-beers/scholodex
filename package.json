{
  "name": "scholodex",
  "version": "0.1.0",
  "description": "A prototype for a scholar's rolodex",
  "repository": "github:theodore-s-beers/scholodex",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prettify": "find . -name '*.js' ! -path './node_modules/*' ! -path './public/build/*' -exec prettier --write {} ';'",
    "prettify-ts": "find . -name '*.ts' ! -path './node_modules/*' ! -path './public/build/*' -exec prettier --write {} ';'",
    "standardize": "find . -name '*.js' ! -path './node_modules/*' ! -path './public/build/*' -exec standard --fix {} ';'",
    "standardize-ts": "find . -name '*.ts' ! -path './node_modules/*' ! -path './public/build/*' -exec ts-standard --fix {} ';'",
    "start": "sirv public",
    "validate": "svelte-check"
  },
  "dependencies": {
    "sirv-cli": "^1.0.12",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-typescript": "^8.2.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/uuid": "^8.3.1",
    "prettier": "^2.3.2",
    "rollup": "^2.53.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard": "^16.0.3",
    "svelte": "^3.40.1",
    "svelte-check": "^2.2.3",
    "svelte-preprocess": "^4.7.4",
    "ts-standard": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
